@model Darka.Pages.Restaurants.ListModel
@{
    ViewData["Title"] = "Restaurants";
}

<h1>Restaurants</h1>


<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control" asp-for="SearchTerm " /><span>
                <button class="btn btn-outline-dark">
                   
                    <i class="fas fa-search text-grey"></i>

                </button>
            </span>
        </div>
    </div>


</form>

@foreach(var restaurant in Model.Restaurants)
{
<div class="kryList">
    <partial name="_Summary" model="restaurant" />
</div>
}

