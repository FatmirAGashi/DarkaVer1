@using Darka.Core
@model Restaurant


<div class="card">
    <div class="card-header">
        <h3>@Model.Name</h3>
    </div>
    <div class="panel-body">
        <span>Location: @Model.Location</span>
        <span>Cuisine: @Model.Cuisine</span>
    </div>
    <div class="panel-footer">
        <a class="btn btn-lg" asp-page="./Detail" asp-route-restaurantId="@Model.Id"><i class="fas fa-search text-grey"></i></a>
        <a class="btn btn-lg" asp-page="./Edit" asp-route-restaurantId="@Model.Id"> <i class="fas fa-edit text-grey"></i></a>
        <a class="btn btn-lg" asp-page="./Delete" asp-route-restaurantId="@Model.Id"><i class="fas fa-trash"></i></a>
    </div>
</div>